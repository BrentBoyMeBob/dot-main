# Set the general colorscheme to Tomorrow Night.
foreground            #c5c8c6
background            #1d1f21
selection_foreground  #c5c8c6
selection_background  #373b41
url_color             #c5c8c6
cursor		      #c5c8c6
cursor_text_color     #c5c8c6

# Set the font to SF Mono.
font_family      SF Mono
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size 12.0
adjust_line_height 120%

# Add padding to the terminal.
window_padding_width 13.0

# Set the cursor to a beam instead of a block.
cursor_shape beam

# Set the extra colors also to Mountain.
