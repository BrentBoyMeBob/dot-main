# Set the general colorscheme to Tomorrow Night.
foreground            #e4e4e8
background            #18181b
selection_foreground  #e4e4e8
selection_background  #303035
url_color             #e4e4e8
cursor		      #e4e4e8
cursor_text_color     #e4e4e8

# Set the font to SF Mono.
font_family      SF Mono
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size 12.0
adjust_line_height 120%

# Add padding to the terminal.
window_padding_width 13.0

# Set the cursor to a beam instead of a block.
cursor_shape beam

